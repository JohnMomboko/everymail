{
  "compilerOptions": {
    "target": "ES2015",
    "module": "Node16", 
    "moduleResolution": "Node16", 
    "declaration": true, 
    "outDir": "./dist", 
    "strict": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true 
  },
  "include": ["src/**/*.ts", "tests"],
  "exclude": ["node_modules", "dist"]
}
